<?xml version="1.0" encoding="UTF-8"?>

<?import edu.wpi.first.tableviewer.TableEntryData?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.Menu?>
<?import javafx.scene.control.MenuBar?>
<?import javafx.scene.control.MenuItem?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.control.ToolBar?>
<?import javafx.scene.control.TreeItem?>
<?import javafx.scene.control.TreeTableColumn?>
<?import javafx.scene.control.TreeTableView?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.StackPane?>
<?import javafx.scene.layout.VBox?>
<?import java.net.URL?>
<BorderPane maxHeight="16000" maxWidth="16000"
            minHeight="400" minWidth="600"
            prefHeight="400.0" prefWidth="600.0"
            fx:id="root"
            xmlns="http://javafx.com/javafx/8.0.112" xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="edu.wpi.first.tableviewer.MainWindowController">
    <top>
        <MenuBar BorderPane.alignment="CENTER">
            <menus>
                <Menu mnemonicParsing="false" text="File">
                    <items>
                        <MenuItem mnemonicParsing="false" onAction="#close" text="Close"/>
                        <MenuItem onAction="#showPrefs" text="Preferences" accelerator="SHORTCUT+,"/>
                    </items>
                </Menu>
                <Menu mnemonicParsing="false" text="Edit">
                    <items>
                        <MenuItem mnemonicParsing="false" text="Delete"/>
                    </items>
                </Menu>
                <Menu mnemonicParsing="false" text="Help">
                    <items>
                        <MenuItem mnemonicParsing="false" text="About"/>
                    </items>
                </Menu>
            </menus>
        </MenuBar>
    </top>
    <center>
        <TreeTableView fx:id="tableView" editable="true" BorderPane.alignment="CENTER">
            <root>
                <TreeItem fx:id="ntRoot" expanded="true">
                    <value>
                        <TableEntryData/>
                    </value>
                </TreeItem>
            </root>
            <columns>
                <TreeTableColumn fx:id="keyColumn" editable="false" minWidth="200" prefWidth="200" sortable="false" text="Key"/>
                <TreeTableColumn fx:id="valueColumn" editable="true" minWidth="200" prefWidth="200" sortable="false" text="Value"/>
                <TreeTableColumn fx:id="typeColumn" editable="false" prefWidth="100" minWidth="100" sortable="false" text="Type"/>
            </columns>
        </TreeTableView>
    </center>
    <bottom>
        <VBox>
            <ToolBar fx:id="searchBar" managed="false">
                <Label text="Search"/>
                <TextField fx:id="searchField" styleClass="search-field" promptText="Search..."/>
                <Button fx:id="closeSearchButton" styleClass="close-search-button" text="Clear"
                        onAction="#clearSearch"/>
            </ToolBar>
            <StackPane BorderPane.alignment="CENTER" minHeight="50" fx:id="connectionBackground">
                <Label fx:id="connectionLabel" text="No connection" minHeight="50"/>
            </StackPane>
        </VBox>
    </bottom>
    <stylesheets>
        <URL value="@styles.css"/>
    </stylesheets>
</BorderPane>
